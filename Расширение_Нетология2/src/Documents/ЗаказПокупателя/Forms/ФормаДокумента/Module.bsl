	Реквизит = Новый Массив;
	Реквизит.Добавить(Тип("СправочникСсылка.Т_КонтактныеЛица"));
	
	ТипДляРеквизита = Новый ОписаниеТипов(Реквизит);
	
	НовыйРеквизит = Новый РеквизитФормы("КонтактноеЛицо", ТипДляРеквизита,, "Контактное Лицо", Истина);
	
	ДобавлениеРевизитов = Новый Массив;
	ДобавлениеРевизитов.Добавить(НовыйРеквизит);
	ИзменитьРеквизиты(ДобавлениеРевизитов);
	
	КонтактноеЛицо = Элементы.Добавить("КонтактноеЛицо", Тип("ПолеФормы"), Элементы.ГруппаШапкаПраво);
	КонтактноеЛицо.ПутьКданным = "КонтактноеЛицо";
	КонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
КонецПроцедуры

